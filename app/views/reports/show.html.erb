<h1>Report for <%= local_assigns[:start_date] %> to <%= local_assigns[:end_date]-1 %></h1>

<p>
	<%= link_to('Back', report_path, class: 'btn btn-default') %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Transaction date</th>
      <th>Payment total</th>
      <th>Payment type</th>
      <th>Employee</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= order.payment_total %></td>
        <td><%= order.payment_type %></td>
        <td><%= order.employee %></td>
      </tr>
    <% end %>
  </tbody>
</table>